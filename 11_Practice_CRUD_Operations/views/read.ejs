<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="h-screen w-full p-10 bg-zinc-900 text-white">
      <div class="mb-10">
        <a class="text-blue-500" href="/">Back to Home</a>
      </div>

      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>

      <% if (user.length > 0) { %>
        <div class="users flex gap-3 flex-wrap">
          <% user.forEach((user) => { %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
              <div class="w-full h-52 rounded-lg bg-zinc-500 overflow-hidden">
                <img
                  src="<%= user.image %>"
                  alt="<%= user.name %>"
                  class="w-full h-full object-cover rounded-lg"
                />
              </div>
              <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
              <h5 class="text-zinc-500"><%= user.email %></h5>
              <div class="flex gap-3 mt-10">
                <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
                <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <h3 class="text-zinc-200">No Users Yet</h3>
      <% } %>
    </div>
  </body>
</html>
